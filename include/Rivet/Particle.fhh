  /// @name PdgId declarations
  //@{

  /// Typedef for a PDG ID code.
  typedef int PdgId;

  /// Typedef for a pair of particle names.
  typedef std::pair<PdgId, PdgId> PdgIdPair;

  //@}


}

#endif
