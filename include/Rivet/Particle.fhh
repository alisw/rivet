namespace Rivet {


  /// @name Particle declarations
  //@{

  // Forward declaration
  class Particle;

  /// Typedefs for a vector of Particle objects.
  typedef std::vector<Particle> Particles; //< New form, cf. Jets
  /// @deprecated Use Particles instead. Will be removed
